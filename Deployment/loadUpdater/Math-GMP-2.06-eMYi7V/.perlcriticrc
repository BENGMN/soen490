verbose = 9
profile-strictness = quiet

[Documentation::PodSpelling]
stop_words = Mullane BigInt gmp tradeoff bfac bxor bior bgcd Divisior returnes legendre jacobi fibonacci n'th Biggar Ilya Zakharevich

